<form class="roll-card">
  <div class="card-title">
    {{label}}
  </div>
  <div class="roll-result">
    {{{dicePoolRollHTML}}}
    {{> "systems/dieseldrachen-vtt/templates/chat/luck-roll-button-partial.hbs"}}
    <div class="roll-group">
      <div class="roll-row">
        <div class="roll-prop">
          <strong>Fertigkeit: </strong>
          <span>{{usedAbility}}</span>
        </div>
        <div class="roll-prop">
          <strong>Anzahl vor Verwendung: </strong>
          <span>{{itemQuantity}}</span>
        </div>
        
        <div class="roll-prop">
          <strong>Schwierigkeit: </strong>
          <span>{{difficulty}}</span>
        </div>
      </div>
    </div>
    {{> "systems/dieseldrachen-vtt/templates/chat/success-partial.hbs"}}
    <div class="dice-roll">
      <div class="dice-result">
        <div class="dice-formula">
          <span>{{damageRollFormula}}</span>
        </div>
        <div class="dice-formula">
          <span>Schaden: {{damageFormula}}</span>
        </div>
      </div>
    </div>
  </div>
</form>