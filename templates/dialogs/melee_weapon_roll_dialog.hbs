<form class="custom-dialog">
    <input type="hidden" name="itemId" value="{{itemId}}" data-dtype="String" />
    <div class="form-group">
        <label class="resource-label">{{label}}:</label>
        <input type="hidden" name="label" value="{{label}}" data-dtype="String" />
        <input type="text" name="diceFormula" value="{{diceFormula}}" data-dtype="String" />
    </div>
    <div class="form-group">
        <label class="resource-label">Modusw√ºrfel:</label>
        <div class="grid grid-6col">
            <div class="flex-col">
                <input type="radio" value="4" id="mod_dice_4" name="modDice" {{#if (eq modDice 4)}}checked{{/if}}
                    data-dtype="Number" />
                <label for="mod_dice_4"><span class="diesel-dice-icon d4 ddi-selected" title="D4"></span></label>
            </div>
            <div class="flex-col">
                <input type="radio" value="6" id="mod_dice_6" name="modDice" {{#if (eq modDice 6)}}checked{{/if}}
                    data-dtype="Number" />
                <label for="mod_dice_6"><span class="diesel-dice-icon d6 ddi-selected" title="D6"></span></label>
            </div>
            <div class="flex-col">
                <input type="radio" value="8" id="mod_dice_8" name="modDice" {{#if (eq modDice 8)}}checked{{/if}}
                    data-dtype="Number" />
                <label for="mod_dice_8"><span class="diesel-dice-icon d8 ddi-selected" title="D8"></span></label>
            </div>
            <div class="flex-col">
                <input type="radio" value="10" id="mod_dice_10" name="modDice" {{#if (eq modDice 10)}}checked{{/if}}
                    data-dtype="Number" />
                <label for="mod_dice_10"><span class="diesel-dice-icon d10 ddi-selected" title="D10"></span></label>
            </div>
            <div class="flex-col">
                <input type="radio" value="12" id="mod_dice_12" name="modDice" {{#if (eq modDice 12)}}checked{{/if}}
                    data-dtype="Number" />
                <label for="mod_dice_12"><span class="diesel-dice-icon d12 ddi-selected" title="D12"></span></label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="resource-label">Schwierigkeit:</label>
        <input type="number" name="difficulty" value="10" data-dtype="Number" />
    </div>
</form>