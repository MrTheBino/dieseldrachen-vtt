<form class="custom-dialog">
  <div class="form-group">
    <label class="resource-label">{{label}}:</label>
    <input type="hidden" name="label" value="{{label}}" data-dtype="String" />
    <input type="text" name="diceFormula" value="{{diceFormula}}" data-dtype="String" />
  </div>
  <div class="form-group">
    <label class="resource-label">Modusw√ºrfel:</label>
    <div class="grid grid-6col">
      <div class="flex-col">
        <input type="radio" value="0" name="modDice" {{#if (eq modDice 0)}}checked{{/if}} data-dtype="Number" />
        <span class="">-</span>
      </div>
      <div class="flex-col">
        <input type="radio" value="4" name="modDice" {{#if (eq modDice 4)}}checked{{/if}} data-dtype="Number" />
        <span class="dicier-icon" title="D4">4_ON_D4</span>
      </div>
      <div class="flex-col">
        <input type="radio" value="6" name="modDice" {{#if (eq modDice 6)}}checked{{/if}} data-dtype="Number" />
        <span class="dicier-icon" title="D6">6_ON_D6</span>
      </div>
      <div class="flex-col">
        <input type="radio" value="8" name="modDice" {{#if (eq modDice 8)}}checked{{/if}} data-dtype="Number" />
        <span class="dicier-icon" title="D8">8_ON_D8</span>
      </div>
      <div class="flex-col">
        <input type="radio" value="10" name="modDice" {{#if (eq modDice 10)}}checked{{/if}} data-dtype="Number" />
        <span class="dicier-icon" title="D10">10_ON_D10</span>
      </div>
      <div class="flex-col">
        <input type="radio" value="12" name="modDice" {{#if (eq modDice 12)}}checked{{/if}} data-dtype="Number" />
        <span class="dicier-icon" title="D12">12_ON_D12</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="resource-label">Schwierigkeit:</label>
    <input type="number" name="difficulty" value="10" data-dtype="Number" />
  </div>
</form>