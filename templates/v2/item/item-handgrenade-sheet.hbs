<div class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img class='profile-img' src='{{item.img}}' data-edit='img' title='{{item.name}}' />
    <div class='header-fields'>
      <h1 class='charname'><input name='name' type='text' value='{{item.name}}' placeholder='Name' /></h1>
      <div class='grid grid-4col'>
        <div class='resource'>
          <label class='resource-label'>Handlichkeit</label>
          {{> "systems/dieseldrachen-vtt/templates/shared/dice-option-select-partial.hbs" key="system.handling"
          value=system.handling dtype="Number" zeroAllowed=false}}
        </div>
        <div class='resource'>
          <label class='resource-label'>Schaden</label>
          <input type='text' name='system.damage' value='{{system.damage}}' data-dtype='Number' />
        </div>
        <div class='resource'>
          <label class='resource-label'>Preis</label>
          <input type='text' name='system.purchasePrice' value='{{system.purchasePrice}}' data-dtype='Number' />
        </div>
        <div class='resource'>
          <label class='resource-label'>Anzahl</label>
          <input type='text' name='system.quantity' value='{{system.quantity}}' data-dtype='Number'/>
        </div>
      </div>
    </div>
  </header>

</div>