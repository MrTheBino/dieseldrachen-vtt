<div class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img class='profile-img' src='{{item.img}}' data-edit='img' title='{{item.name}}' />
    <div class='header-fields'>
      <h1 class='charname'><input name='name' type='text' value='{{item.name}}' placeholder='Name' /></h1>
      <div class='grid grid-3col'>
        <div class='resource'>
          <label class='resource-label'>Würfel</label>
          {{> "systems/dieseldrachen-vtt/templates/shared/dice-option-select-partial.hbs" key="system.dice"
          value=system.dice dtype="String"}}
        </div>
        <div class='resource'>
          <label class='resource-label'>Einschränkung</label>
          <input type='text' name='system.restriction' value='{{system.restriction}}' data-dtype='String' />
        </div>
        <div class='resource'>
          <label class='resource-label'>Typ</label>
          <select name="system.type" class="full-width-select">
            <option value="technic" {{#if (eq system.type "technic")}}selected{{/if}}>Technik</option>
            <option value="maneuver" {{#if (eq system.type "maneuver")}}selected{{/if}}>Manöver</option>
          </select>
        </div>
      </div>
    </div>
  </header>
</div>