<section class="tab {{tabs.items.id}} {{tabs.items.cssClass}} scrollable" id="items" data-tab="{{tabs.items.id}}"
    data-group="{{tabs.items.group}}">
    <div class="npc-items resource-group">
        <!-- Fracht -->
        <h5 class="quick-label">Fracht</h5>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-prop'>Anzahl</div>
                <div class='item-controls'>
                    <a class='item-control item-create' data-action="createItem"
                        title='{{localize "DOCUMENT.Create" type=' Item'}}' data-type='item'>
                        <i class='fas fa-plus'></i>
                    </a>
                </div>
            </li>
            {{#each gear as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='rollable' data-roll-type='item'>
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <span>{{item.name}}</span>
                </div>
                <div class='item-prop'>{{item.system.quantity}}</div>
                <div class='item-controls'>
                    <a class='item-control item-edit' data-action="editItem" title='{{localize "DOCUMENT.Update" type='
                        Item'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' data-action="deleteItem"
                        title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</section>