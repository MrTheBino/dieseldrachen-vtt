<section class="tab {{tabs.weapons.id}} {{tabs.weapons.cssClass}} scrollable" id="weapons" data-tab="{{tabs.weapons.id}}"
    data-group="{{tabs.weapons.group}}">
<div class="npc-items resource-group">
        <!-- Fernkampfwaffen -->
        <h5 class="quick-label">Geschütze</h5>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-prop'>Lage</div>
                <div class='item-prop'>Präzision</div>
                <div class='item-prop'>Schaden</div>
                <div class='item-prop'>Rate</div>
                <div class='item-controls'>
                    <a class='item-control item-create' data-action="createItem" title='{{localize "DOCUMENT.Create" type=' Item'}}'
                        data-type='vehicleWeapon'>
                        <i class='fas fa-plus'></i>
                    </a>
                </div>
            </li>
            {{#each vehicleWeapons as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='' data-roll-type='vehicleWeapon'>
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <span>{{item.name}}</span>
                </div>
                <div class='item-prop'>{{item.system.lage}}</div>
                <div class='item-prop'>{{{diceIcon item.system.precision_near}}} / {{{diceIcon
                    item.system.precision_close}}} / {{{diceIcon item.system.precision_far}}}</div>
                <div class='item-prop'>
                    {{item.system.damage_near}}/{{item.system.damage_close}}/{{item.system.damage_far}}</div>
                <div class='item-prop'>{{item.system.rate}}</div>

                <div class='item-controls'>
                    <a class='item-control item-edit' data-action="editItem" title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' data-action="deleteItem" title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</section>