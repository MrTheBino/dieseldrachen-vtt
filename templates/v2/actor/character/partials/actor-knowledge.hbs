<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='knowledge'
      >
        <i class='fas fa-plus'></i>
      </a>
    </div>
  </li>
  {{#each knowledge as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <span>{{item.name}}</span>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit' data-action="editItem"
          title='{{localize "DOCUMENT.Edit" type='knowledge'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete' data-action="deleteItem"
          title='{{localize "DOCUMENT.Delete" type='knowledge'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>