<form class="{{cssClass}} {{actor.type}} flexcol flex-fix" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">Gesundheit</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.dice" class="resource-label">Würfel</label>
          <div class="resource-content flexrow flex-center flex-between">
            <select name="system.dice">
              <option value="6" {{#if (eq system.dice 6)}}selected{{/if}}>D6</option>
              <option value="8" {{#if (eq system.dice 8)}}selected{{/if}}>D8</option>
              <option value="10" {{#if (eq system.dice 10)}}selected{{/if}}>D10</option>
              <option value="12" {{#if (eq system.dice 12)}}selected{{/if}}>D12</option>
            </select>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.cr" class="resource-label">Schutz</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.armor" value="{{system.armor}}" data-dtype="Number" />
          </div>
        </div>

      </div>
      <div class="">
        <div class="">
          <button class="rollable" data-roll-type="skill" data-roll="2d{{system.dice}}"
            data-label="{{actor.name}}">Würfeln</button>
        </div>
      </div>
    </div>
  </header>

  <!-- Healthbar -->
  <div class="healthbar">
    {{> "systems/dieseldrachen-vtt/templates/actor/parts/healthbar-partial.hbs" health_value=system.health.value}}
  </div>

  <div class="npc-items">
    <!-- Nahkampfwaffen -->
    <h3 class="quick-label">Nahkampfwaffen</h3>
    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-prop'>Reichweite</div>
        <div class='item-prop'>Schaden</div>
        <div class='item-prop'>Waffengewicht</div>
        <div class='item-controls'>
          <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
            data-type='meleeWeapon'>
            <i class='fas fa-plus'></i>
          </a>
        </div>
      </li>
      {{#each meleeWeapons as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='meleeWeapon'>
              <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-prop'>{{ localize (concat "DIESELDRACHEN.Ranges." item.system.range)}}</div>
        <div class='item-prop'>{{item.system.damage}}</div>
        <div class='item-prop'>D{{item.system.weaponWeight}}</div>
        <div class='item-controls'>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ol>

    <!-- Fernkampfwaffen -->
    <h3 class="quick-label">Fernkampfwaffen</h3>
    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-prop'>Präzision</div>
        <div class='item-prop'>Schaden</div>
        <div class='item-prop'>Rate</div>
        <div class='item-prop'>Kap.</div>
        <div class='item-prop'>Schuss</div>
        <div class='item-controls'>
          <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
            data-type='rangedWeapon'>
            <i class='fas fa-plus'></i>
          </a>
        </div>
      </li>
      {{#each rangedWeapons as |item id|}}
      <li class='item flexrow' data-item-id='{{item._id}}'>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='rangedWeapon'>
              <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
            </a>
          </div>
          <h4>{{item.name}}</h4>
        </div>
        <div class='item-prop'>
          {{item.system.precision_near}}/{{item.system.precision_close}}/{{item.system.precision_far}}</div>
        <div class='item-prop'>{{item.system.damage_near}}/{{item.system.damage_close}}/{{item.system.damage_far}}</div>
        <div class='item-prop'>{{item.system.rate}}</div>
        <div class='item-prop'>{{item.system.capacity}}</div>
        <div class='item-prop'>{{item.system.bullets}}</div>
        <div class='item-controls'>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
            <i class='fas fa-edit'></i>
          </a>
          <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="description">Beschreibung</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

  </section>
</form>