<form class="{{cssClass}} {{actor.type}} flexcol flex-fix" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
            {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
            use both the "grid" and "grid-Ncol" class where "N" can be any number
            from 1 to 12 and will create that number of columns. --}}
            <div class="resources grid grid-3col">

                {{!-- "flex-group-center" is also defined in the _grid.scss file
                and it will add a small amount of padding, a border, and will
                center all of its child elements content and text. --}}
                <div class="resource flex-group-center">
                    <label for="system.type" class="resource-label">Art</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.type" value="{{system.type}}" data-dtype="String" />
                    </div>
                </div>

                <div class="resource flex-group-center">
                    <label for="system.model" class="resource-label">Modell</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.model" value="{{system.model}}" data-dtype="String" />
                    </div>
                </div>

                <div class="resource flex-group-center">
                    <label for="system.location" class="resource-label">Ort</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.location" value="{{system.location}}" data-dtype="String" />
                    </div>
                </div>



            </div>

        </div>
    </header>

    <div class="grid grid-2col">
        <div class="resource flex-group-center">
            <label for="system.condition" class="resource-label">Zustand</label>
            <div class="resource-content flexrow flex-center flex-between">
                <div class="resource-content flexrow flex-center flex-between">
                    <select name="system.condition">
                        <option value="4" {{#if (eq system.condition 4)}}selected{{/if}}>D4 - Schrott</option>
                        <option value="6" {{#if (eq system.condition 6)}}selected{{/if}}>D6 - Schlecht</option>
                        <option value="8" {{#if (eq system.condition 8)}}selected{{/if}}>D8 - O.K</option>
                        <option value="10" {{#if (eq system.condition 10)}}selected{{/if}}>D10 - Gut</option>
                        <option value="12" {{#if (eq system.condition 12)}}selected{{/if}}>D12 - Tipp Topp</option>
                    </select>
                    <button class="vehicle_safing_throw rollable" data-roll-type="skill"
                        data-roll="d{{system.condition}}" data-label="{{actor.name}} - Rettungswurf">
                        Rettungswurf</button>

                </div>
            </div>
        </div>
        <div class="resource flex-group-center">
            <div class="resource-content flexrow flex-center flex-between">
                <div class="resource-content flexrow flex-center flex-between">
                    <textarea name="system.conditionText">{{system.conditionText}}</textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-2col">
        <div class="resource flex-group-center">
            <label for="system.acceleration" class="resource-label">Beschleunigung</label>
            <div class="resource-content flexrow flex-center flex-between">
                <select name="system.acceleration">
                    <option value="4" {{#if (eq system.acceleration 4)}}selected{{/if}}>D4</option>
                    <option value="6" {{#if (eq system.acceleration 6)}}selected{{/if}}>D6</option>
                    <option value="8" {{#if (eq system.acceleration 8)}}selected{{/if}}>D8</option>
                    <option value="10" {{#if (eq system.acceleration 10)}}selected{{/if}}>D10</option>
                    <option value="12" {{#if (eq system.acceleration 12)}}selected{{/if}}>D12</option>
                </select>
            </div>
        </div>

        <div class="resource flex-group-center">
            <label for="system.speed.value" class="resource-label">Geschwindigkeit / Höhe</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.speed.value" value="{{system.speed.value}}" data-dtype="Number" />
                <span> / </span>
                <input type="text" name="system.speed.max" value="{{system.speed.max}}" data-dtype="Number" />
            </div>
        </div>
    </div>
    <div class="grid grid-3col">
        <div class="resource flex-group-center">
            <label for="system.mass" class="resource-label">Masse</label>
            <div class="resource-content flexrow flex-center flex-between">
                <select name="system.mass">
                    <option value="4" {{#if (eq system.mass 4)}}selected{{/if}}>D4</option>
                    <option value="6" {{#if (eq system.mass 6)}}selected{{/if}}>D6</option>
                    <option value="8" {{#if (eq system.mass 8)}}selected{{/if}}>D8</option>
                    <option value="10" {{#if (eq system.mass 10)}}selected{{/if}}>D10</option>
                    <option value="12" {{#if (eq system.mass 12)}}selected{{/if}}>D12</option>
                </select>
            </div>
        </div>

        <div class="resource flex-group-center">
            <label for="system.armor" class="resource-label">Schutz</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.armor" value="{{system.armor}}" data-dtype="Number" />
            </div>
        </div>

        <div class="resource flex-group-center">
            <label for="system.stability.value" class="resource-label">Stabilität</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.stability.value" value="{{system.stability.value}}"
                    data-dtype="Number" />
                <span> / </span>
                <input type="text" name="system.stability.max" value="{{system.stability.max}}" data-dtype="Number" />
            </div>
        </div>



        <div class="resource flex-group-center">
            <label for="system.agility" class="resource-label">Wendigkeit</label>
            <div class="resource-content flexrow flex-center flex-between">
                <select name="system.agility">
                    <option value="4" {{#if (eq system.agility 4)}}selected{{/if}}>D4</option>
                    <option value="6" {{#if (eq system.agility 6)}}selected{{/if}}>D6</option>
                    <option value="8" {{#if (eq system.agility 8)}}selected{{/if}}>D8</option>
                    <option value="10" {{#if (eq system.agility 10)}}selected{{/if}}>D10</option>
                    <option value="12" {{#if (eq system.agility 12)}}selected{{/if}}>D12</option>
                </select>
            </div>
        </div>

        <div class="resource flex-group-center">
            <label for="system.size" class="resource-label">Fahrzeuggröße</label>
            <div class="resource-content flexrow flex-center flex-between">
                <select name="system.size">
                    <option value="15" {{#if (eq system.size 15)}}selected{{/if}}>SW 15 - Klein</option>
                    <option value="10" {{#if (eq system.size 10)}}selected{{/if}}>SW 10 - Mittel</option>
                    <option value="5" {{#if (eq system.size 5)}}selected{{/if}}>SW 5 - Groß</option>
                </select>
            </div>
        </div>
    </div>
    <div class="grid grid-3col">
        <div class="resource flex-group-center">
            <label for="system.motors.max" class="resource-label">Motoren (RW1)</label>
            <input type="text" name="system.motors.max" value="{{system.motors.max}}" data-dtype="Number"
                class="tiny_input" />
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=1
                max=system.motors.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=2
                max=system.motors.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=3
                max=system.motors.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=4
                max=system.motors.max}}

            </div>
        </div>

        <div class="resource flex-group-center">
            <label for="system.motors.max" class="resource-label">Reifen / Tragfläche (RW2)</label>
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=1 max=4}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=2 max=4}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=3 max=4}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=4 max=4}}
            </div>
        </div>

        <div class="resource flex-group-center">
            <label for="system.fireSmoke" class="resource-label">Feuer/Rauch (RW3) <input type="checkbox" name="system.fireSmoke" {{#if system.fireSmoke}}checked{{/if}} /></label>
            <div class="resource-content flexrow flex-between small_text item-align-left">
                <ul>
                    <li>1. Runde: 1E für Alle</li>
                    <li>1. Runde: 2E für Alle</li>
                    <li>3. Runde: 3E für Alle usw.</li>
                </ul>
            </div>
        </div>
    </div>



    <div class="npc-items">
        <!-- Fernkampfwaffen -->
        <h3>Geschütze</h3>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-prop'>Präzision</div>
                <div class='item-prop'>Schaden</div>
                <div class='item-prop'>Rate</div>
                <div class='item-prop'>Kap.</div>
                <div class='item-prop'>Schuss</div>
                <div class='item-prop'>Ausgerüstet</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
                        data-type='rangedWeapon'>
                        <i class='fas fa-plus'></i>
                    </a>
                </div>
            </li>
            {{#each rangedWeapons as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='rollable' data-roll-type='rangedWeapon'>
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class='item-prop'>
                    {{item.system.precision_near}}/{{item.system.precision_close}}/{{item.system.precision_far}}</div>
                <div class='item-prop'>
                    {{item.system.damage_near}}/{{item.system.damage_close}}/{{item.system.damage_far}}</div>
                <div class='item-prop'>{{item.system.rate}}</div>
                <div class='item-prop'>{{item.system.capacity}}</div>
                <div class='item-prop'>{{item.system.bullets}}</div>
                <div class='item-prop'><input type="checkbox" {{#if item.system.mounted}} checked{{/if}}
                        data-item-stat="system.mounted" class="item-editable-stat"></div>
                <div class='item-controls'>
                    <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>

    <div class="npc-items">
        <!-- Umbauten -->
        <h3>Umbauten</h3>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
                        data-type='vehicleUpgrade'>
                        <i class='fas fa-plus'></i>
                    </a>
                </div>
            </li>
            {{#each vehicleUpgrades as |item id|}}
            <li class='item' data-item-id='{{item._id}}'>
                <div class="flexrow">
                    <div class='item-name'>
                        <div class='item-image'>
                            <a class='rollable' data-roll-type='vehicleUpgrade'>
                                <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                            </a>
                        </div>
                        <h4>{{item.name}}</h4>
                    </div>
                    <div class='item-controls'>
                        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                            <i class='fas fa-edit'></i>
                        </a>
                        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                            <i class='fas fa-trash'></i>
                        </a>
                    </div>
                </div>
                <div class="flexcol">
                    <div class="item-align-left small_description">
                        {{{item.system.description}}}
                    </div>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <a class="item" data-tab="description">Description</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Biography Tab --}}
        <div class="tab biography" data-group="primary" data-tab="description">
            {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
            {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
        </div>

    </section>
</form>