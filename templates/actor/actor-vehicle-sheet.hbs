<form class="{{cssClass}} {{actor.type}} flexcol flex-fix" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
            {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
            use both the "grid" and "grid-Ncol" class where "N" can be any number
            from 1 to 12 and will create that number of columns. --}}
            <div class="resources grid grid-5col">

                {{!-- "flex-group-center" is also defined in the _grid.scss file
                and it will add a small amount of padding, a border, and will
                center all of its child elements content and text. --}}
                <div class="resource flex-group-center">
                    <label for="system.type" class="resource-label">Art</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.type" value="{{system.type}}" data-dtype="String" />
                    </div>
                </div>

                <div class="resource flex-group-center">
                    <label for="system.model" class="resource-label">Modell</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.model" value="{{system.model}}" data-dtype="String" />
                    </div>
                </div>

                <div class="resource flex-group-center">
                    <label for="system.location" class="resource-label">Ort</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.location" value="{{system.location}}" data-dtype="String" />
                    </div>
                </div>

                <div class="resource flex-group-center">
                    <label for="system.seats" class="resource-label">Sitze</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.seats" value="{{system.seats}}" data-dtype="Number" />
                    </div>
                </div>

                <div class="resource flex-group-center">
                    <label for="system.freight" class="resource-label">Fracht</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="text" name="system.freight" value="{{system.freight}}" data-dtype="Number" />
                    </div>
                </div>
            </div>

        </div>
    </header>

    <div class="grid grid-3col resource-group">
        <div class="resource flex-group-center">
            <label for="system.condition" class="resource-label">Zustand</label>
            <div class="resource-content flexcol flex-center flex-between">
                <div class="resource-content flexrow flex-center flex-between">
                    {{> "systems/dieseldrachen-vtt/templates/actor/parts/actor-dice-select.hbs"
                    group_name="radio_attr_condition" name="system.condition" value=system.condition}}
                </div>
                <span class="tiny-text">D4 - Schrott |
                    D6 - Schlecht |
                    D8 - O.K |
                    D10 - Gut |
                    D12 - Tipp Topp </span>
            </div>
        </div>
        <div class="resource flex-group-center grid-span-2">
            <div class="resource-content flexrow flex-center flex-between">
                <div class="resource-content flexrow flex-center flex-between">
                    <textarea name="system.conditionText">{{system.conditionText}}</textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-3col">
        <div class="resource flex-group-center resource-group">
            <label for="system.acceleration" class="resource-label">Beschleunigung</label>
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/actor-dice-select.hbs"
                group_name="radio_attr_acceleration" name="system.acceleration" value=system.acceleration}}
            </div>
        </div>

        <div class="resource flex-group-center resource-group">
            <label for="system.speed.max" class="resource-label">Geschwindigkeit / Höhe</label>
            <input type="text" name="system.speed.max" value="{{system.speed.max}}" data-dtype="Number"
                class="tiny_input" />
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/speed-partial.hbs" value=1
                max=system.speed.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/speed-partial.hbs" value=2
                max=system.speed.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/speed-partial.hbs" value=3
                max=system.speed.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/speed-partial.hbs" value=4
                max=system.speed.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/speed-partial.hbs" value=5
                max=system.speed.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/speed-partial.hbs" value=6
                max=system.speed.max}}
            </div>
        </div>
    </div>
    <div class="grid grid-3col">
        <div class="resource flex-group-center resource-group">
            <label for="system.mass" class="resource-label">Masse</label>
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/actor-dice-select.hbs"
                group_name="radio_attr_mass" name="system.mass" value=system.mass}}
            </div>
        </div>

        <div class="resource flex-group-center resource-group">
            <label for="system.armor" class="resource-label">Schutz</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.armor" value="{{system.armor}}" data-dtype="Number" />
            </div>
        </div>

        <div class="resource flex-group-center resource-group">
            <label for="system.stability.value" class="resource-label">Stabilität</label>
            <div class="resource-content flexrow flex-center flex-between">
                <input type="text" name="system.stability.value" value="{{system.stability.value}}"
                    data-dtype="Number" />
                <span> / </span>
                <input type="text" name="system.stability.max" value="{{system.stability.max}}" data-dtype="Number" />
            </div>
        </div>
    </div>
    <div class="grid grid-3col">


        <div class="resource flex-group-center resource-group">
            <label for="system.agilityDice" class="resource-label">Wendigkeit</label>
            <input type="text" name="system.agility" value="{{system.agility}}" data-dtype="Number"
                class="tiny_input" />
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/actor-dice-select.hbs"
                group_name="radio_attr_agility" name="system.agilityDice" value=system.agilityDice}}
            </div>
        </div>

        <div class="resource flex-group-center resource-group">
            <label for="system.size" class="resource-label">Fahrzeuggröße</label>
            <div class="resource-content flexrow flex-center flex-between">
                <select name="system.size">
                    <option value="15" {{#if (eq system.size 15)}}selected{{/if}}>SW 15 - Klein</option>
                    <option value="10" {{#if (eq system.size 10)}}selected{{/if}}>SW 10 - Mittel</option>
                    <option value="5" {{#if (eq system.size 5)}}selected{{/if}}>SW 5 - Groß</option>
                </select>
            </div>
        </div>
        <div class="resource flex-group-center resource-group resource-help-text">
            <div>
                <strong>Schwachstelle:</strong>
                <p>SW+3 RW <span class="vehicle-condition-marker">X</span> Zustand</p>
            </div>
            <div>
                <strong>Trefferqualität:</strong>
                <p>6+ RW Zustand
                    10+ RW Zustand oder zuf. Insasse</p>
            </div>
        </div>
    </div>
    <div class="grid grid-3col">
        <div class="resource flex-group-center resource-group">
            <label for="system.motors.max" class="resource-label">Motoren <span
                    class="vehicle-condition-marker">1</span></label>
            <input type="text" name="system.motors.max" value="{{system.motors.max}}" data-dtype="Number"
                class="tiny_input" />
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=1
                max=system.motors.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=2
                max=system.motors.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=3
                max=system.motors.max}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/motor-damage-partial.hbs" value=4
                max=system.motors.max}}

            </div>
        </div>

        <div class="resource flex-group-center resource-group">
            <label for="system.motors.max" class="resource-label">Reifen / Tragfläche <span
                    class="vehicle-condition-marker">2</span></label>
            <div class="resource-content flexrow flex-center flex-between">
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=1 max=4}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=2 max=4}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=3 max=4}}
                {{> "systems/dieseldrachen-vtt/templates/actor/parts/tire-wing-partial.hbs" value=4 max=4}}
            </div>
        </div>

        <div class="resource flex-group-center resource-group">
            <label for="system.fireSmoke" class="resource-label">Feuer/Rauch <span
                    class="vehicle-condition-marker">3</span> <input type="checkbox" name="system.fireSmoke" {{#if
                    system.fireSmoke}}checked{{/if}} /></label>
            <div class="help-text">
                <ul>
                    <li>1. Runde: 1E für Alle</li>
                    <li>1. Runde: 2E für Alle</li>
                    <li>3. Runde: 3E für Alle usw.</li>
                </ul>
            </div>
        </div>
    </div>



    <div class="npc-items">
        <!-- Fernkampfwaffen -->
        <h3 class="quick-label">Geschütze</h3>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-prop'>Lage</div>
                <div class='item-prop'>Präzision</div>
                <div class='item-prop'>Schaden</div>
                <div class='item-prop'>Rate</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
                        data-type='vehicleWeapon'>
                        <i class='fas fa-plus'></i>
                    </a>
                </div>
            </li>
            {{#each vehicleWeapons as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='' data-roll-type='vehicleWeapon'>
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class='item-prop'>{{item.system.lage}}</div>
                <div class='item-prop'>
                    {{item.system.precision_near}}/{{item.system.precision_close}}/{{item.system.precision_far}}</div>
                <div class='item-prop'>
                    {{item.system.damage_near}}/{{item.system.damage_close}}/{{item.system.damage_far}}</div>
                <div class='item-prop'>{{item.system.rate}}</div>

                <div class='item-controls'>
                    <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>

    <div class="npc-items">
        <!-- Umbauten -->
        <h3 class="quick-label">Umbauten</h3>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
                        data-type='vehicleUpgrade'>
                        <i class='fas fa-plus'></i>
                    </a>
                </div>
            </li>
            {{#each vehicleUpgrades as |item id|}}
            <li class='item' data-item-id='{{item._id}}'>
                <div class="flexrow">
                    <div class='item-name'>
                        <div class='item-image'>
                            <a class='rollable' data-roll-type='vehicleUpgrade'>
                                <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                            </a>
                        </div>
                        <h4>{{item.name}}</h4>
                    </div>
                    <div class='item-controls'>
                        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                            <i class='fas fa-edit'></i>
                        </a>
                        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                            <i class='fas fa-trash'></i>
                        </a>
                    </div>
                </div>
                <div class="flexcol">
                    <div class="item-align-left small_description">
                        {{{item.system.description}}}
                    </div>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>

    <div class="npc-items">
        <!-- Fracht -->
        <h3 class="quick-label">Fracht</h3>
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Name'}}</div>
                <div class='item-prop'>Anzahl</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Item'}}'
                        data-type='item'>
                        <i class='fas fa-plus'></i>
                        {{localize 'DOCUMENT.New' type='item'}}
                    </a>
                </div>
            </li>
            {{#each gear as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='rollable' data-roll-type='item'>
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <h4>{{item.name}}</h4>
                </div>
                <div class='item-prop'>{{item.system.quantity}}</div>
                <div class='item-controls'>
                    <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Item'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Item'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <a class="item" data-tab="description">Beschreibung</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Biography Tab --}}
        <div class="tab biography" data-group="primary" data-tab="description">
            {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
            {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
        </div>

    </section>
</form>